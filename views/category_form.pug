extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='Ice cream, lollies, etc.' name='name' value=(undefined===category ? '' : category.name))
      br
      label(for='description') Description:
      input#name.form-control(type='text', placeholder='Find all great sugar treats here!' name='description' value=(undefined===category ? '' : category.description))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
